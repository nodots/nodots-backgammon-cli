{
  "name": "@nodots-llc/backgammon-cli",
  "version": "4.1.1",
  "description": "Command-line backgammon client for Nodots Backgammon",
  "main": "dist/index.js",
  "bin": {
    "ndbg": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -b --force",
    "postbuild": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "link": "npm run build && npm link",
    "prepare": "npm run build",
    "release": "npm run build && npm publish",
    "publish:dry-run": "npm run build && npm publish --dry-run",
    "prepublishOnly": "npm run build && node ../../scripts/lint-versions.js"
  },
  "keywords": [
    "backgammon",
    "cli",
    "client",
    "game",
    "typescript"
  ],
  "author": "Ken Riley <kenr@nodots.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodots/nodots-backgammon.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/nodots/nodots-backgammon/tree/main/packages/cli",
  "bugs": {
    "url": "https://github.com/nodots/nodots-backgammon/issues"
  },
  "dependencies": {
    "@nodots-llc/backgammon-types": "file:../types",
    "@nodots-llc/backgammon-ai": "file:../ai",
    "@nodots-llc/backgammon-core": "file:../core",
    "axios": "^1.10.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^17.0.1",
    "inquirer": "^8.2.6",
    "open": "^10.1.2",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.11",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
