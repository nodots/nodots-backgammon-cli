{
  "name": "nodots-backgammon-cli",
  "version": "1.0.0",
  "description": "Command-line backgammon client for Nodots Backgammon",
  "main": "dist/index.js",
  "bin": {
    "nodots-backgammon": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "release": "npm run build && npm publish",
    "publish:dry-run": "npm run build && npm publish --dry-run"
  },
  "keywords": [
    "backgammon",
    "cli",
    "game",
    "nodots"
  ],
  "author": "Ken Riley <kenr@nodots.com>",
  "license": "MIT",
  "dependencies": {
    "@nodots-llc/backgammon-types": "^3.1.3",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "dotenv": "^17.0.1",
    "inquirer": "^9.2.12",
    "open": "^10.1.2",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
